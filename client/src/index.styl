body
  background: #252525
  color: #fff
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;

h1
  text-align: center
  color: mediumseagreen
  margin-bottom: 0

h3
  margin-top: 10px

.root-container
  text-align: center

ul
  list-style-type: none

.device-list
  text-align: left
  background: #484848
  border: 1px solid #c3c3c3
  color: #B5BABE
  margin-left: 10px
  width: 300px
.container
  display: inline-block

.device-port
  padding: 10px
  &.active
    color: #5CCF7A


.buttons
  margin-top: 10px
  display: block

button
  background: #5CCF7A
  border: none
  border-radius: 0
  margin: 10px
  padding: 15px
  display: inline-block
  font-size: 20px
  color: #fff
  margin-right: 20px

  &.red
    background: #E65368


.refresh
  position: absolute
  right: 10px
  top: 0px
  color: #484848
  font-size: 40px
  font-weight: bold


